.navbar.navbar-default(role='navigation')
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Amazon

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li: a(href='/profile'): i.fa.fa-anchor.fa-lg &nbsp; Profile
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-danger= user.email || user.username
        else
          li: a(href='/auth/reddit'): i.fa.fa-reddit.fa-lg
          li: a(href='/auth/google'): i.fa.fa-google.fa-lg &nbsp; Login with Google
          li: a(href='/auth/github'): i.fa.fa-github.fa-lg &nbsp; Login with Github
          li: a(href='/auth/twitter'): i.fa.fa-twitter.fa-lg &nbsp; Login with Twitter
          li: a(href='/register'): i.fa.fa-rocket.fa-lg &nbsp; Register
          li: a(href='/login'): i.fa.fa-sign-in.fa-lg &nbsp; Login

