extends ../shared/template
block content
  h2 Products
  .panel.panel-default
    .panel-body
      table.table.table-hover.table-condensed
        thead
          tr
            th Name
            th Photo
            th Price
        tbody
          each product in products
            tr
              td= product.name
              td: img(src=product.photo style="width: 100px;")
              td $#{product.price}

block scripts
  script(src='/js/user/home.js')

